<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_login"
    android:orientation="vertical"
    tools:context=".UnLoginActiviy" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/mll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include
                android:id="@+id/rl_title"
                layout="@layout/title_sub_layout" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/mllbottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true" >

                <Button
                    android:id="@+id/mbtnPay"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/main_color"
                    android:text="申请租房"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@id/mbtnPay"
                    android:gravity="center_vertical|center_horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="租房总价："
                        android:textColor="#333333"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/mtvShopPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0元"
                        android:textColor="#ff0000"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/mview"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_above="@id/mllbottom"
                android:background="@color/bg_color_login" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_above="@id/mview"
                android:background="#ffffff"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/infor_image"
                        android:layout_width="match_parent"
                        android:layout_height="180dip"
                        android:src="@drawable/ba_4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:paddingBottom="15dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="房源名称："
                                android:textColor="#333333"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/mtvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="name"
                                android:textColor="#666666"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/bg_color_login" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="房源价位："
                                android:textColor="#333333"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/mtvMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="money"
                                android:textColor="#666666"
                                android:textSize="16dp" />
                        </LinearLayout>

                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="房源位置："
                                android:textColor="#333333"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/houseAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="houseAddress"
                                android:textColor="#666666"
                                android:textSize="16dp" />
                        </LinearLayout>
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="房源配套："
                                android:textColor="#333333"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/housePeiTao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="housePeiTao"
                                android:textColor="#666666"
                                android:textSize="16dp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/bg_color_login" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联系方式："
                                android:textColor="#333333"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/mtvPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="phone"
                                android:textColor="#666666"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/bg_color_login" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发布时间："
                                android:textColor="#333333"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/mtvTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="time"
                                android:textColor="#666666"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/bg_color_login" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="房源面积："
                                android:textColor="#333333"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/metMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="message"
                                android:textColor="#666666"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>